@model IEnumerable<GestionScolarite.Models.Etudiant>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead class="bg-primary text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Section)
                </td>
                <td class="text-dark">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "text-dark" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "text-dark" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "text-dark" })
                </td>
            </tr>
        }
    </tbody>

</table>
