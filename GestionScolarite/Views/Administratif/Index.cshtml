@model IEnumerable<GestionScolarite.Models.Account>

@{
    ViewBag.Title = "Index";
}

<h2>Student List</h2><br />

<table class="table">
    <thead class="bg-primary text-white">
       <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            Action
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                @if (item.Status == "Valide")
                {
                    <td class="bg-success text-white">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                }
                else
                {
                    <td class="bg-danger text-white">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                }

                <td class="text-dark">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "text-dark" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "text-dark" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "text-dark" })
                </td>
            </tr>
        }
        </tbody>
</table>

