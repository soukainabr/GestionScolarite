@model GestionScolarite.Models.Enseignant


@{
    ViewBag.Title = "Ajouter une matière à un enseignant";
}

<h1>Affecter une matière </h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>Matière</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.Matieres, "Matière", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("matiereId", ViewBag.Matieres as SelectList, "Sélectionner une matière", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Matieres, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EnseignantId, "Enseignant", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("EnseignantId", ViewBag.Enseignants as SelectList, "Sélectionner un enseignant", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EnseignantId, "", new { @class = "text-danger" })
        </div>
    </div>
   
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ajouter" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Retour à la liste", "Index")
</div>